<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="350dp"
    android:layout_height="wrap_content"
    android:padding="20dp"
    android:layout_gravity="center">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="Kitchen Control"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/chooseKitchen_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="12dp"
        android:text="Choose User" />

    <RelativeLayout
        android:id="@+id/spinner_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp">
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:enabled="false"/>

        <Spinner
            android:id="@+id/chooseKitchen_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true" />
    </RelativeLayout>


        <RadioGroup
            android:id="@+id/switch_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/changePassword_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Change Kitchen Password" />

            <RadioButton
                android:id="@+id/changeStatus_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Change Kitchen Status" />
        </RadioGroup>


    <LinearLayout
        android:id="@+id/changePassword_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="12dp"
            android:text="Change Kitchen Password" />



        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/changePassword_editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:inputType="textPassword" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/changeStatus_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="12dp"
            android:text="Change Kitchen Status" />

        <RadioGroup
            android:id="@+id/changeStatus_radioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/ready"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="Ready" />

            <RadioButton
                android:id="@+id/busy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Busy" />

            <RadioButton
                android:id="@+id/outOfService"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Out Of Service" />
        </RadioGroup>

    </LinearLayout>

